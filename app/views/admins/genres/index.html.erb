<div class="container">
	<div class="row">
		<h3>ジャンル追加・一覧画面</h3>
		<div class="genre-form">
			<%= form_with model: @genre, url: admins_genres_path do |f| %>
				<h5>ジャンル</h5>
				<%= f.text_field :name %>

				<%= f.radio_button :is_valid, :有効, checked: true %>
				<%= f.label :有効 %>

				<%= f.radio_button :is_valid, :無効 %>
				<%= f.label :無効 %>

				<%= f.submit '追加' %>
			<% end %>
		</div>
		<div class="genre-index">
			<table class="table">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= genre.name %></td>
							<td><%= genre.is_valid %></td>
							<td><%= link_to '編集する', edit_admins_genre_path(genre), class: "btn" %></td>
							</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>