<div class="container">
	<h3>商品詳細画面</h3>
	<div class="row">
		<div class="col-xs-3">
			<%= attachment_image_tag(@item, :image, size: "200x200", fallback: "home-baked-cake.jpg") %>
		</div>
		<div class="col-xs-6">
			<table class="table">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>商品名</td>
						<td><%= @item.name %></td>
					</tr>
					<tr>
						<td>商品説明</td>
						<td><%= @item.detail %></td>
					</tr>
					<tr>
						<td>ジャンル</td>
						<td><%= @item.genre.name %></td>
					</tr>
					<tr>
						<td>税込み価格(税抜き価格)</td>
						<td><%= @tax_price %>  <%= @item.non_taxed_price %></td>
					</tr>
					<tr>
						<td>販売ステータス</td>
						<td><%= @item.is_valid %></td>
					</tr>
				</tbody>
			</table>
			<%= link_to '編集する', edit_admins_item_path(@item), class: "btn" %>
		</div>
	</div>
</div>

