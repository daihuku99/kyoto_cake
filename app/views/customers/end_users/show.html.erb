<div class="container">
	<div class="row">
		<h1>マイページ</h1>

		<h2>登録情報</h2>

		<h4><%= link_to '編集する', edit_end_user_path(current_end_user) %></h4>

		<h4><%= link_to 'パスワードを変更する', edit_end_user_registration_path %></h4>

		<table class="table table-hover">
			<thead>
				<tr>
					<th colspan="2"></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>氏名</td>
					<td><%= current_end_user.full_name %></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= current_end_user.full_kana_name %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= current_end_user.postcode %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= current_end_user.address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= current_end_user.phone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= current_end_user.email %></td>
				</tr>
			</tbody>
		</table>

		<h4>配送先</h4><%= link_to '一覧を見る', deliveries_path %>

		<h4>注文履歴</h4><%= link_to '一覧を見る', orders_path %>
	</div>
</div>