<div class="container">
  <div class="row">
    <h3>商品一覧</h3>
  </div>
  <div class="item-index">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>商品名</th>
          <th>税込み価格</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= attachment_image_tag(item, :image, size: "100x100") %></td>
          <td><%= link_to item.name, item_path(item) %></td>
          <td>¥<%= item.tax_price %>
            <% if current_end_user.add_item?(item.id) %>
              <p>この商品はすでにカートに入っています</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>