<div class="container">
  <div class="row">
    <h3>注文情報入力</h3>
    <div class="order-form">
      <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
        <h5>支払い方法</h5>
        <%= f.radio_button :payment_type, :クレジットカード, :checked => true %>
        <%= f.label :クレジットカード %>
        <%= f.radio_button :payment_type, :銀行振り込み %>
        <%= f.label :銀行振り込み %>

        <h5>お届け先</h5>
        <%= radio_button_tag :select_address, 1, :checked => true %>
        <%= f.label :ご自身の住所 %><br>

        <%= radio_button_tag :select_address, 2 %>
        <%= f.label :登録済み住所から選択 %>
          <%= f.collection_select :address_id, current_end_user.deliveries, :id, :address  %><br>

        <%= radio_button_tag :select_address, 3 %>
        <%= f.label :新しいお届け先 %>
          <h6>郵便番号</h6>
          <%= f.text_field :postcode %>
          <h6>住所</h6>
          <%= f.text_field :address %>
          <h6>宛名</h6>
          <%= f.text_field :direction %><br>

        <%= f.submit '確認画面に進む', class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>